<%= render "shared/header" %>

<h2 class = "devise__title">ログインページ</h2>
<div class = "alert">
  <%= alert %>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <br>
    <em>必須</em>
    <br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field__area", placeholder: "ご登録のメールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <br>
    <em>必須</em>
    <br>
    <%= f.password_field :password, autocomplete: "current-password", class: "field__area", placeholder: "ご登録時のパスワード半角英数字６文字以上" %>
  </div>

  <div class="actions">
    <%= f.submit "ログインする", class: "actions__btn" %>
  </div>
<% end %>
