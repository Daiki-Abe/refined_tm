<%= render "shared/header" %>

<div class = "title">
  <h1 class = "title__main-title">Account Login Form</h1>
  <h2 class = "title__sub-title">〜 アカウントログイン 〜</h2>
</div>

<div class = "alert">
  <%= alert %>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <br>
    <em>必須</em>
    <br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field__area", placeholder: "ご登録のメールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <br>
    <em>必須</em>
    <br>
    <%= f.password_field :password, autocomplete: "current-password", class: "field__area", placeholder: "ご登録のパスワード半角英数字６文字以上" %>
  </div>

  <div class="actions">
    <%= f.submit "ログインする", class: "actions__btn" %>
  </div>
<% end %>
