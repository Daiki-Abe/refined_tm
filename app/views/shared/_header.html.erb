<div class = "header">
  <div class = "header__left">
    <div class = "header__left__btn home">
      <%= link_to "ホーム", declarations_path %>
    </div>

    <div class = "header__left__btn score">
      <%= link_to "活動記録", score_declarations_path %>
    </div>
  </div>

  <div class = "header__right">
    <% if user_signed_in? %>
      <%= link_to "アカウント編集", edit_user_registration_path, class: "header__right__btn edit" %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header__right__btn logout" %>
    <% else %>
      <%= link_to "ログイン", new_user_session_path, class: "header__right__btn login" %>
      <%= link_to "新規登録", new_user_registration_path, class: "header__right__btn signup" %>
    <% end %>
  </div>
</div>