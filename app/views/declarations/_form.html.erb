<%= form_with(model: declaration, local: true) do |form| %>
  <% if declaration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(declaration.errors.count, "error") %> prohibited this declaration from being saved:</h2>

      <ul>
      <% declaration.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for declaration do |f| %>
    <%= f.label :what, "今から何をしますか？" %>
    <%= f.text_field :what, placeholder: '自由に入力しましょう' %>

    <%= f.label :why, "何のためにするのですか？" %>
    <%= f.text_field :why, placeholder: '本当にやりたいことことをやりましょう' %>

    <%= f.label :time, "目標の時間を入力してください" %>
    <%= f.text_field :time, placeholder: '時間に入力しましょう' %>

    <%= f.label :score, "アクション結果" %>
    <%= f.text_field :score, id: "score" %>


    <div id="timer">00時間00分00秒</div>
    <button id="start">start</button> 
    <button id="stop" disabled>stop</button>
    <button id="reset">reset</button>

    <%= f.submit "記録する" %>

    <%= link_to 'Good Night!!', score_declarations_path %>
  <% end %>
<% end %>
